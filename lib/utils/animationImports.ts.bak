/**
 * Phase 2B: Dynamic Animation Import System
 * This replaces the large framer-motion bundle with dynamic imports
 * to reduce bundle size significantly
 */

import dynamic from "next/dynamic";

// Dynamic imports for framer-motion components
export const MotionDiv = dynamic(
  () => import("framer-motion").then((mod) => ({ default: mod.motion.div })),
  {
    ssr: false,
    loading: () => <div />,
